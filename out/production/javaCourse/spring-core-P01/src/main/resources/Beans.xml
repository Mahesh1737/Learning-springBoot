<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="Car" class="org.P01.Car" scope="singleton" autowire>
        <property name="Engine" ref="petrolEngine"></property>
<!--        <constructor-arg name="petrol" ref="petrolEngine"></constructor-arg>-->
    </bean>
    <bean id="petrolEngine" class="org.P01.PetrolEngine" scope="prototype"/>

</beans>